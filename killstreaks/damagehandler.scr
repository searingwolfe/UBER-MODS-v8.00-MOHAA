immolated:

	local.team = self.dmteam
	self.immolated = 1
	if(self.immolation != NIL && self.immolation != NULL) { self.immolation remove }

	local.fire = spawn script_model
	local.fire model "emitters/explosion_conflagration.tik"
	local.fire anim start
	local.fire notsolid
	local.fire.scale = 0.25
	local.fire loopsound snowballfire
	self.immolation = local.fire

	while(self != NULL && isalive self && self.dmteam == local.team && self.dmteam != "spectator" && self.dead != 1 && self.missile == NIL && self.immolated == 1 && self.immolated_c <= 2)
	{
		if(self.immolation != NIL && self.immolation != NULL)
		{
			if(self.dog != NIL && self.dog != NULL) { self.immolation.origin = self.dog gettagposition "tag_mouth" }
			else { self.immolation.origin = self gettagposition "Bip01 Head" }
		}
		self.immolated_c++
		waitframe
	}

	if(self != NULL) { self.immolated_c = 0 }
	while(self != NULL && !isalive self && self.dmteam == local.team && self.dmteam != "spectator" && self.immolated == 1 && self.immolated_c <= 80) // immolate dead bodies for 4 seconds.
	{
		if(self.immolation != NIL && self.immolation != NULL)
		{
			if(self.dog != NIL && self.dog != NULL) { self.immolation.origin = self.dog gettagposition "tag_mouth" }
			else { self.immolation.origin = self gettagposition "Bip01 Head" }
		}
		local.died = 1
		self.immolated_c++
		waitframe
	}

	if(self != NULL) { self.immolated = 0; self.immolated_c = 0 }
	if(local.fire != NIL && local.fire != NULL) { local.fire remove }
end
