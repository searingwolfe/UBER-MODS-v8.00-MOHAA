assisted_suicide:

	while(1)
	{
		for(local.i = 1; local.i <= $player.size; local.i++)
		{
			if($player[local.i] != NULL)
			{
				if($player[local.i].suicide_assister != NIL && $player[local.i].suicide_assister != NULL && $player[local.i].suicide_assist_c != NIL && $player[local.i].suicide_assist_team != NIL && $player[local.i].suicide_assister_team != NIL)
				{
					if(isalive $player[local.i] && $player[local.i].dmteam != "spectator" && $player[local.i].suicide_assist_c < 30 && $player[local.i].dmteam == $player[local.i].suicide_assist_team && $player[local.i].suicide_assister.dmteam == $player[local.i].suicide_assister_team && $player[local.i].suicide_assister.dmteam != "spectator")
					{
						if($player[local.i] getmovement != "falling" || $player[local.i].using_pack == 1) { $player[local.i].suicide_assist_c++ }
					}
					else
					{
						$player[local.i].suicide_assist_c = NIL
						$player[local.i].suicide_assist_team = NIL
						$player[local.i].suicide_assister = NIL
						$player[local.i].suicide_assister_team = NIL
					}
				}
				else
				{
					$player[local.i].suicide_assist_c = NIL
					$player[local.i].suicide_assist_team = NIL
					$player[local.i].suicide_assister = NIL
					$player[local.i].suicide_assister_team = NIL
				}
			}
		}
		waitframe
	}
end

